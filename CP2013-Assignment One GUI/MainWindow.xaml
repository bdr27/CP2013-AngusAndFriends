<Window x:Class="CP2013_Assignment_One_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CP2013_Assignment_One_GUI.UserControls"
        Title="Angus and Friends" Height="768" Width="1024" ResizeMode="NoResize">
    <Grid Margin="0,50,0,0">
        <local:MainUI x:Name="viewMainUI" Visibility="Hidden" Grid.ColumnSpan="3" Margin="0,0,-6,-77"/>
        <local:ContactUI x:Name="viewContactUI" Visibility="Hidden" Grid.ColumnSpan="3" Margin="0,0,-6,-77"/>
        <local:AdminUI x:Name="viewAdminUI" Visibility="Hidden" Grid.ColumnSpan="3" Margin="0,0,-6,-77"/>
        <local:UserUI x:Name="viewUserUI" Visibility="Hidden" Grid.ColumnSpan="3" Margin="0,0,-6,-77"/>
        <local:AboutUI x:Name="viewAboutUI" Visibility="Hidden" Grid.ColumnSpan="3" Margin="0,0,-6,-77"/>
        <Button Content="Home" HorizontalAlignment="Left" Margin="0,-50,0,0" VerticalAlignment="Top" Width="75" Grid.Column="0" Grid.Row="0" Click="GoHome_Click"/>
    </Grid>
</Window>
